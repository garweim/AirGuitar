<div class='container-offer-performance'>
  <div class="container">

    <h3 id="sign-upp">Edit My Performance</h3>


    <%= simple_form_for(@offering) do |f| %>
      <div class="form-card">
        <div class="form-inputs">
          <%= f.input :name %>
          <%= f.input :price_hour, label: 'Price per performance (only)'%>
          <%= f.input :genre %>
          <%= f.input :description %>
          <%= f.input :picture %>

          <%= f.input :picture_cache, as: :hidden %>


        </div>

        <div class="form-actions">
           <%= f.submit "Edit", class: "btn-red" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
