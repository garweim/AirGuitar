
<h1>Edit offering</h1>


<%= simple_form_for(@offering) do |f| %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :price_hour, label: 'Price per performance (only)'%>
    <%= f.input :genre %>
    <%= f.input :description %>
    <%= f.input :picture %>

    <%= f.input :picture_cache, as: :hidden %>


  </div>

  <div class="form-actions">
     <%= f.submit "add an offering", class: "btn btn-primary" %>
  </div>
<% end %>

