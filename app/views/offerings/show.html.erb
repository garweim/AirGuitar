<div class="container">
  <div class="artist-infos">
    <div class="artist-name">
      <h3><%= @offering.name %></h3>
    </div>
    <div class="artist-genre">
      <p><%= @offering.genre %></p>
    </div>
    <div class="description">
      <p><strong>About</strong><br><%= @offering.description %></p>
    </div>
  </div>
   <div class="description">
      <p><strong>Price per hour (€)</strong><br><%= @offering.price_hour %>€</p>
    </div>
  <div class="hire-artist">
    <h4></h4>
    <div class="form"></div>
  </div>
  <%= link_to "delete", offering_path(@offering), method: :delete, data: {confirm: 'are you sure?'} %>
  <%= link_to "edit offering",  edit_offering_path(@offering) %>
</div>


<h1>New Booking</h1>


<%= simple_form_for(@booking) do |f| %>

  <div class="form-inputs">
    <%= f.hidden_field :offering, value: @offering.id %>
    <%= f.input :starting_date, as: :datetime, html5: true %>
    <%= f.input :end_date, as: :datetime, html5: true %>
  </div>


  <div class="form-actions">
     <%= f.submit "add an offering", class: "btn btn-primary" %>
  </div>
<% end %>





