
<%#= cl_image_tag @offering.picture, height: 300, width: 400, crop: :fill %>




<div class="banner" <% unless @offering.picture.blank? %> style="background-image:linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path(@offering.picture) %>')" <% end %>>
    <div class="container">
    </div>
</div>

<div class="container">
  <div class="container-show">
    <div class="form-card">
      <div class="artist-infos">
        <div class="artist-name">
          <h3><%= @offering.name %></h3>
        </div>
        <div class="artist-genre">
          <p><%= @offering.genre %></p>
        </div>
        <div class="description">
          <p><strong>About</strong><br><%= @offering.description %></p>
        </div>
      </div>
       <div class="description">
          <p><strong>Price per hour (€)</strong><br><%= @offering.price_hour %>€</p>
        </div>
      <div class="hire-artist">
        <h4></h4>
        <div class="form"></div>
      </div>
      <% if policy(@offering).destroy? %>


  <div id="bouton-delete-edit">

    <%= link_to "delete", offering_path(@offering), method: :delete, data: {confirm: 'are you sure?'}, class: "btn-red" %> <%end  %>


    <%= link_to "edit offering",  edit_offering_path(@offering), class: "btn-red" %>
  <h3>Book this artist</h3>
  <div class="form-card">
    <%= simple_form_for([@offering, @booking]) do |f| %>
      <div class="form-inputs">
        <%= f.input :starting_date, as: :datetime, html5: true %>
        <%= f.input :end_date, as: :datetime, html5: true %>
        </div>
        <div class="form-actions">
           <%= f.submit "Book", class: "btn-red" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
